{
  "name": "prettier-plugin-thrift",
  "version": "0.0.0",
  "description": "A prettier plugin for Thrift",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "test": "jest"
  },
  "keywords": [
    "thrift",
    "prettier"
  ],
  "author": "Jordan Gensler <jordangens@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^23.0.2",
    "@types/node": "^10.3.2",
    "@types/prettier": "^1.13.1",
    "jest": "^23.1.0",
    "prettier": "^1.13.5",
    "ts-jest": "^22.4.6",
    "typescript": "^2.9.1"
  },
  "dependencies": {
    "@creditkarma/thrift-parser": "^1.1.3"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
